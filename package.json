{
  "name": "jstoolbox",
  "description": "Yet another Javascript functional programming helper library.",
  "keywords": [
    "util",
    "functional",
    "server",
    "client",
    "browser"
  ],
  "author": "Axel Vaindal <avaindal@m4dnation.io>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M4dNation/jstoolbox.git"
  },
  "main": "src/main.js",
  "version": "1.1.0",
  "scripts": {
    "compile": "babel lib -d src; node build.js",
    "prepublishOnly": "npm run compile",
    "test": "node node_modules/.bin/jest --runInBand tests/ --config=jest.unit.config.json"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/M4dNation/jstoolbox/issues"
  },
  "homepage": "https://github.com/M4dNation/jstoolbox#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "jest": "24.9.0",
    "uglify-js": "3.6.0",
    "xo": "0.24.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "warn",
      "import/no-absolute-path": "off",
      "import/no-unresolved": "off",
      "curly": "warn"
    },
    "envs": [
      "node",
      "jest",
      "browser"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "notify": false,
    "verbose": true,
    "bail": true,
    "clearMocks": true
  }
}
